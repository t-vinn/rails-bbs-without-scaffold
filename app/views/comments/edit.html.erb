<h1>Edit Comment<h1>

<%= form_for @comment, :url => {:action => "update"} do |f| %>
  <div class ="field">
    <%= f.label :message, "投稿内容"%>
    <%= f.text_field :message %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :my_thread_id, value: @my_thread.id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<%= link_to 'Back', my_thread_comments_path %>

<%= p @my_thread.id%>
